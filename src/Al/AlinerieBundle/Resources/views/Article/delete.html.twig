{% extends "::layout.html.twig" %}

{% block title %}
  Supprimer un article - {{ parent() }}
{% endblock %}

{% block article %}

  <h2>Supprimer un article</h2>

  <p>
    Etes-vous certain de vouloir supprimer l'article "{{ article.title }}" ?
  </p>

  {# On met l'id de l'article dans la route de l'action du formulaire #}
  <form action="{{ path('al_alinerie_deletearticle', {'article_id': article.id}) }}" method="post">
    <a href="{{ path('al_alinerie_homepage', {'article_id': article.id}) }}" class="btn btn-default">
      <i class="fa fa-angle-left fa-1x"></i>
      Retour à l'article
    </a>
    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
  </form>
<br/><br/>

{% endblock %}